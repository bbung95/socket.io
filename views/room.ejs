<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        const ROOM_ID = "<%= roomId%>";
    </script>
    <link rel="stylesheet" href="style.css">

    <script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <style>
        #video-grid {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }

        video {
            border-radius: 30px;
            width: 400px;
            height: 300px;
            object-fit: cover;
            padding: 8px;
            transform: rotateY(180deg);
            -webkit-transform: rotateY(180deg);/* Safari and Chrome */
            -moz-transform: rotateY(180deg);/* Firefox */
        }

    </style>
</head>

<body>
    <div class="main">
        <div class="main__left">
            <div class="main__videos">
                <div id="video-grid">

                </div>
            </div>
            <div class="main__controls">
                <div class="main__controls__block">
                    <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                        <i class="fas fa-microphone"></i>
                        <span>Mute</span>
                    </div>
                    <div onclick="stopVideo()" class="main__controls__button main__video_button">
                        <i class="fas fa-video"></i>
                        <span>Stop Video</span>
                    </div>
                </div>
                <div class="main__controls__block">
                    <div class="main__controls__button" onclick="shareDisplay()">
                        <i class="fas fa-shield-alt"></i>
                        <span>화면공유</span>
                    </div>
                    <div class="main__controls__button">
                        <i class="fas fa-user-friends"></i>
                        <span>Participants</span>
                    </div>
                    <div class="main__controls__button">
                        <i class="fas fa-comment-alt"></i>
                        <span>Chat</span>
                    </div>
                </div>
                <div class="main__controls__block">
                    <div class="main__controls__button" onclick="leaveVideo()">
                        <span class="leave_meeting">Leave Meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__header">
                <h6>참가자 목록</h6>
            </div>
            <div class="main__user_window">
                <ul class="list">

                </ul>
            </div>
        </div>
    </div>
</body>

</html>